    "configurations": [
        {
            "type": "lldb",
            "request": "attach",
            "name": "Attach",
            "pid": "${command:pickMyProcess}" // use ${command:pickProcess} to pick other users' processes
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Release base test",
            "program": "${workspaceFolder}/build_release/base_test.exe",
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug base test",
            "program": "${workspaceFolder}/build/base_test.exe",
            "args": [],
            "cwd": "${workspaceFolder}"
        },
    ]
}
